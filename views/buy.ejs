<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/bootstrap')%> <%-include('./partials/header.ejs')%>
  <body>
    <%-include('./partials/nav2.ejs')%>
    <div class="container">
      <h2 class="Alert"><%=alrt%></h2>
      <form action="/apply-search" method="get">
        <input
          id="search"
          name="search"
          type="text"
          placeholder="Filter by seller,state, job, price, quantity, date"
        />
      </form>
      <br />
      <table>
        <head>
          <tr>
            <th>
              <label for="seller-name">Recruiter Name</label>
            </th>
            <th>
              <label for="job-name">Role</label>
            </th>
            <th><label for="company">Company</label></th>
            <th><label for="State">Location</label></th>
            <th>
              <label for="Job-description">Job Description</label>
            </th>
            <th><label for="Base-price">Salary</label></th>
            <th><label for="quantity">Vacancies</label></th>
            <th><label for="job-category">Job Category</label></th>
            <th><label for="start-date">Start Date</label></th>
            <th><label for="end-date">Duration</label></th>
            <th><label for="bid">Apply</label></th>
          </tr>
        </head>
        <%if(jobs.length>=1){%> <%jobs.forEach(job=>{ %>
        <form action="/apply-job/<%=job._id%>" method="post">
          <tr>
            <div class="rows">
              <th>
                <a href="/recruiterjobs/<%=job._id%>"><%=job.recruiterName%></a>
              </th>
              <th><a href="/studentjobs/<%=job._id%>"><%=job.role%></a></th>
              <th><a href="/studentjobs/<%=job._id%>"><%=job.company%></a></th>
              <th><a href="/studentjobs/<%=job._id%>"><%=job.location%></a></th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.description%></a>
              </th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.salary%></a>
              </th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.vacancies%></a>
              </th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.category%></a>
              </th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.startDate%></a>
              </th>
              <th>
                <a href="/studentjobs/<%=job._id%>"><%=job.duration%></a>
              </th>
              <th>
                <button>Apply</button>
              </th>
            </div>
          </tr>
        </form>
        <%})}%>
      </table>
    </div>
  </body>
</html>
